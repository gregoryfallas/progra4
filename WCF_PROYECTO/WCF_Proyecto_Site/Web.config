<?xml version="1.0"?>
<configuration>

  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true"/>
  </appSettings>

  <connectionStrings>
    
        <!--ESTO ES EL AREA DE CONSTRUCCIÓN DE LAS CREDENCIALES-->
    <!--ESTO ES EL AREA DE CONSTRUCCIÓN DE LAS CREDENCIALES-->
    <add name="Win_aut"
               providerName="System.Data.SqlClient"
               connectionString="Data Source=LAPTOP-BS7PA7NI;
                               Initial Catalog=DB_AEROPUERTO;
                               Integrated Security=True;"/>

    <add name="Sql_aut"
         providerName="System.Data.SqlClient"
         connectionString="Data Source=LAPTOP-BS7PA7NI;
                               Initial Catalog=DB_AEROPUERTO;
                               Persist Security Info=True; 
                               User ID=sa;
                               Password=123456;"/>
  </connectionStrings>
    
  <system.web>
    <compilation debug="true" targetFramework="4.5.2"/>
    <httpRuntime targetFramework="4.5.2"/>
    <httpModules>
      <add name="ApplicationInsightsWebTracking" type="Microsoft.ApplicationInsights.Web.ApplicationInsightsHttpModule, Microsoft.AI.Web"/>
    </httpModules>
  </system.web>
  <system.serviceModel>
    <services>
      <service behaviorConfiguration="BD_SVC" name="WCF_Proyecto_SVC.Contract.BD">
        <endpoint address="" binding="basicHttpBinding" bindingConfiguration=""
          contract="WCF_Proyecto_SVC.Interface.IBD" />
        <endpoint address="mex" binding="mexHttpBinding" bindingConfiguration=""
          contract="IMetadataExchange" />
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="BD_SVC">
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="false" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <protocolMapping>
        <add binding="basicHttpsBinding" scheme="http"/>
    </protocolMapping>    
    <serviceHostingEnvironment aspNetCompatibilityEnabled="true" multipleSiteBindingsEnabled="true"/>
  </system.serviceModel>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true">
      <remove name="ApplicationInsightsWebTracking"/>
      <add name="ApplicationInsightsWebTracking" type="Microsoft.ApplicationInsights.Web.ApplicationInsightsHttpModule, Microsoft.AI.Web"
        preCondition="managedHandler"/>
    </modules>
    <!--
        To browse web app root directory during debugging, set the value below to true.
        Set to false before deployment to avoid disclosing web app folder information.
      -->
    <directoryBrowse enabled="true"/>
    <validation validateIntegratedModeConfiguration="false"/>
  </system.webServer>

</configuration>
